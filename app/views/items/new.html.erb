<div class="row">
    <div class="col-sm-8">
<%= form_with(model: @item, local: true) do |f|  %>
        <div class="form-group">
    <%= f.label :title ,'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
    <%= f.label :url, 'URL' %>
    <%= f.text_field :url, class: 'form-control' %>
        </div>
        <div class="form-group">
    <%= f.label :content, '詳細' %>
    <%= f.text_area :content, class: 'form-control' %>
        </div>
        <div class="form-group">
    <%= f.label :img, 'イメージ画像' %><br>
    <%= f.file_field :img %>
        </div>
    <%= f.submit 'ポートフォリオを投稿する', class: 'btn btn-primary' %>
<% end %>
    </div>
    
</div>